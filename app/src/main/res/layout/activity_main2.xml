<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constarint3">

        <include
            layout="@layout/activity_main" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/logincardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#54BD37"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_local_grocery_store_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="grocer's\n corner"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="530dp"
            android:layout_height="650dp"
            app:cardElevation="14dp"
            tools:ignore="MissingConstraints"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="100dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:context=".login">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="20dp"
                    android:text="Welcome to Grocers Corner"
                    android:textColor="#2C2A2A"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#0B7A07"
                    android:hint=" User email"
                    android:inputType="textEmailAddress"
                    android:textColor="#0B7A07"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:textColorHint="#0B7A07" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#0B7A07"
                    android:hint=" password"
                    android:inputType="textPassword"
                    android:textColor="#0B7A07"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:textColorHint="#0B7A07" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/login_checkbox"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:buttonTint="#0B7A07"
                        android:text="show password"
                        android:textColor="#0B7A07" />

                    <TextView
                        android:id="@+id/forgotpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot password"
                        android:textColor="#0B7A07" />
                </LinearLayout>

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#0B7A07"
                    android:text="Login"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/login_register_button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#0B7A07"
                    android:text="Sign up"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/login_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#0B7A07"
                    android:visibility="invisible" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registercardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#54BD37">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_local_grocery_store_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="grocer's\n corner"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="530dp"
            android:layout_height="650dp"
            app:cardElevation="14dp"
            tools:ignore="MissingConstraints"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="100dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:context=".Register">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="46dp"
                    android:text="Create New Account"
                    android:textColor="#2C2A2A"
                    android:textSize="24dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#0B7A07"
                    android:hint=" email"
                    android:inputType="textEmailAddress"
                    android:textColor="#0B7A07"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:textColorHint="#0B7A07" />

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#0B7A07"
                    android:hint=" password"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:textColor="#0B7A07"
                    android:textColorHint="#0B7A07" />

                <EditText
                    android:id="@+id/registerconfirm_password"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#0B7A07"
                    android:hint=" confirm password"
                    android:inputType="textPassword"
                    android:textColor="#0B7A07"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:textColorHint="#0B7A07" />

                <CheckBox
                    android:id="@+id/register_checkbox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:buttonTint="#0B7A07"
                    android:text="show password"
                    android:textColor="#0B7A07" />

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#0B7A07"
                    android:text="Register"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_login_button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#0B7A07"
                    android:text="Login"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/register_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#0B7A07"
                    android:visibility="invisible" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgotcardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#54BD37">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_local_grocery_store_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="grocer's\n corner"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="530dp"
            android:layout_height="650dp"
            app:cardElevation="14dp"
            tools:ignore="MissingConstraints"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="100dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:context=".Forgotpassword">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="#2C2B2B"
                    android:textSize="20dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/backforgot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="63dp"
                    android:layout_marginBottom="20dp"
                    android:text="Forgot Password"
                    android:textColor="#2C2A2A"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/reset_email"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#0B7A07"
                    android:hint="User email"
                    android:inputType="textEmailAddress"
                    android:textColor="#0B7A07"
                    android:textColorHint="#0B7A07" />

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#0B7A07"
                    android:text="Reset password"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/reset_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#0B7A07"
                    android:layout_marginBottom="100dp"
                    android:visibility="invisible" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profilebackground"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/userdetail"
        android:visibility="invisible">

        <EditText
            android:id="@+id/username"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your name"
            android:layout_marginTop="60dp"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>
        <EditText
            android:id="@+id/usermob"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your Mob no."
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>
        <EditText
            android:id="@+id/useralternatemob"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your other Mob no."
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>
        <EditText
            android:id="@+id/useremail"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your email"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>

        <EditText
            android:id="@+id/userstate"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your state"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>

        <EditText
            android:id="@+id/usercity"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your city"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>
        <EditText
            android:id="@+id/userstreet"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your street address"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/round_btn"/>

        <Button
            android:id="@+id/submituserdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#159E0F"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <ProgressBar
            android:id="@+id/submitdeatil_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:indeterminate="true"
            android:indeterminateTint="#0B7A07"
            android:visibility="invisible"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>